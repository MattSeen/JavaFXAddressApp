<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.*?>
<?import java.net.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.layout.BorderPane?>

<BorderPane prefHeight="400.0" prefWidth="600.0" styleClass="background" xmlns:fx="http://javafx.com/fxml" fx:controller="com.matt.addressapp.RootLayoutController">
  <!-- TODO Add Nodes -->
  <stylesheets>
    <URL value="@DarkTheme.css" />
  </stylesheets>
  <top>
    <MenuBar>
      <menus>
        <Menu mnemonicParsing="false" text="File">
          <items>
            <MenuItem onAction="#handleNew" mnemonicParsing="false" text="New" />
            <MenuItem onAction="#handleOpen" mnemonicParsing="false" text="Open" />
            <SeparatorMenuItem mnemonicParsing="false" />
            <MenuItem onAction="#handleSave" mnemonicParsing="false" text="Save" />
            <MenuItem onAction="#handleSaveAs" mnemonicParsing="false" text="Save As" />
            <SeparatorMenuItem mnemonicParsing="false" />
            <MenuItem onAction="#handleExit" mnemonicParsing="false" text="Exit" />
          </items>
        </Menu>
        <Menu mnemonicParsing="false" text="Statistics">
          <items>
            <MenuItem onAction="#handleShowBirthdayStatistics" mnemonicParsing="false" text="Show Statistics" />
          </items>
        </Menu>
        <Menu mnemonicParsing="false" text="Help">
          <items>
            <MenuItem mnemonicParsing="false" text="About" />
          </items>
        </Menu>
      </menus>
    </MenuBar>
  </top>
</BorderPane>
